<h1>Tasks#index</h1>
<p><%= notice %></p>
<% @tasks.each do |task| %>
 <%= task.title %><br>
 <%= task.content %><br>
 <%= link_to 'show', task_path(task.id) %><br>
 <%= link_to 'edit', edit_task_path(task.id) %><br>
 <%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' },class: "btn btn-default" %>
<br>
<% end %>
<%= link_to 'newtask', new_task_path %><br>
