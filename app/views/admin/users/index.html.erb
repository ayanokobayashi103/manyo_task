<h1>管理画面：ユーザーの一覧</h1>
<p><%= link_to '新規ユーザー登録', new_admin_user_path %></p>
<table class="table table-striped">
  <% @users.each do |user| %>
    <tr>
      <th><%= user.id %>:<%= user.name %></th>

      <td>
          タスク数：<%= user.tasks.count %>
      </td>
      <td>
        <% if user.admin? %>
        <%= "管理者" %>
        <% else %>
        <%= "ユーザー" %>
        <% end %>
      </td>
      <td>
        <%= link_to '詳細', admin_user_path(user.id) %>
        <%= link_to '編集', edit_admin_user_path(user.id) %>
        <%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' },class: 'delete-user' %>
      </td>
    </tr>
  <% end %>
</table>
